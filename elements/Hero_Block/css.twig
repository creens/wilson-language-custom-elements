    h1, h2, p {
      color:white;
    } 
  .hero-btn-1 {
    color:#002B79;
  	background:white;
    &:hover {
      	color:#001A51;
    	background:#F1BE48;
    }
  }
  .hero-btn-2 {
    border:2px solid white;
  	background:transparent;
    &:hover {
      color:#001A51;
      background:#F1BE48;
    }
  }
