%%SELECTOR%% {
  width:100%;
  position:relative;
  overflow:hidden;
  .hero-container {
    display:flex;
    align-items:center;
    gap:60px;
    padding:100px 50px;
    margin:0 auto;
    min-height:300px;
    width:100%;
    max-width:1200px;
    & * {
    	flex: 1;
    }
    h1, h2, p, img {
      position:relative;
      z-index:10;
    }
    .hero-action {
      display:flex;
      flex-direction:column;
      gap:33px;
      .hero-btns {
        & > *:first-child {
          margin-right:15px;
        }
      }
    }
    .hero-media {
      max-width:450px;
      img {
        border-radius:50%;
        border:9px solid #F1BE48;
        box-shadow:0 2px 50px rgba(0,0,0,.25);
      }
    }
  }
  {% if design.background.color == 'blue' %}
	background:#003DA5;
